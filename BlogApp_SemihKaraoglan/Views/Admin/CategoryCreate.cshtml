@model CategoryModel

<div class="breadcrumbs">
    <div class="container">
        <h2>Category Create</h2>
    </div>
</div>

<section id="events" class="events">
    <div class="container" data-aos="fade-up">
        <div class="row" data-aos="zoom-in" data-aos-delay="100">

            <form asp-controller="Admin" asp-action="CategoryCreate" method="post" >
                <div class="row">
                    <div class="col-md-8">

                        <div class="form-group row mb-2">
                            <div class="col-md-2">
                                <label asp-for="Name">Category Name :</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" asp-for="Name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group row mb-2">
                            <div class="col-md-11 offset-2">
                                <button type="submit" class="btn btn-success d-inline">Create</button>

                                <a asp-controller="Admin"
                                   asp-action="CategoryList"
                                   class="btn btn-secondary d-inline">Close</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
            }