@model CategoryModel

<div class="breadcrumbs">
    <div class="container">
        <h2>Edit @Model.Name Category</h2>
    </div>
</div>

<section id="events" class="events">
    <div class="container">
        <div class="row">
            <form asp-controller="Admin" asp-action="CategoryEdit" method="post">
                <input type="hidden" name="CategoryId" value=@Model.Id />

                <div class="row">
                    <div class="col-md-4">

                        <div class="form-group row mb-2">
                            <div class="col-md-3">
                                <label asp-for="Name">Category Name</label>
                            </div>
                            <div class="col-md-9">
                                <input type="text" asp-for="Name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-9 offset-3">
                                <button type="submit" class="btn btn-success d-inline"> Save Changes</button>

                                <a asp-controller="Admin"
                                   asp-action="CategoryList"
                                   class="btn btn-secondary d-inline">Close</a>
                            </div>
                        </div>

                    </div>
                </div>



            </form>

        </div>
    </div>
</section>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
            }