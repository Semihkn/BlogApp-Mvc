@inject UserManager<CustomUser> UserManager
@inject SignInManager<CustomUser> SignInManager


<a  asp-area="" asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
    <h1>MyBlog.</h1>
</a>

<nav id="navbar" class="navbar">
    <ul>
        <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Blog</a></li>                 

        @if (User.Identity.IsAuthenticated)
        {
            @if (User.IsInRole("Author"))
            {
                <li>
                    <a class="text-decoration-none" asp-controller="Author" asp-action="PostList">My Posts</a>
                </li>
            }

            @if (User.IsInRole("Admin"))
            {
                <li class="dropdown">
                    <a class="text-decoration-none"><span>Admin Operations</span> <i class="bi bi-chevron-down"></i></a>
                    <ul>
                        <li><a class="text-decoration-none" asp-controller="Admin" asp-action="CategoryList">Categories</a></li>
                        <li><a class="text-decoration-none" asp-controller="Admin" asp-action="UserList">Users</a></li>
                        <li><a class="text-decoration-none" asp-controller="Admin" asp-action="RoleList">Roles</a></li>                       
                    </ul>
                </li>
            }
        }
        <partial name="_LoginPartial" />
    </ul>

</nav><!-- .navbar -->

<div class="position-relative">
    <a href="#" class="mx-2"><span class="bi-facebook"></span></a>
    <a href="#" class="mx-2"><span class="bi-twitter"></span></a>
    <a href="#" class="mx-2"><span class="bi-instagram"></span></a>

    <a href="#" class="mx-2 js-search-open"><span class="bi-search"></span></a>
    <i class="bi bi-list mobile-nav-toggle"></i>

    <!-- ======= Search Form ======= -->
    <div class="search-form-wrap js-search-form-wrap">
        <form asp-controller="BlogApp" asp-action="Search" class="search-form">
            <span class="icon bi-search"></span>
            <input type="text" placeholder="Search" class="form-control">
            <button class="btn js-search-close"><span class="bi-x"></span></button>
        </form>
    </div><!-- End Search Form -->

</div>