@model Post

<div class="d-md-flex post-entry-2 half">
    <a href="single-post.html" class="me-4 thumbnail">
        <img src="~/assets/img/post-landscape-6.jpg" alt="" class="img-fluid">
    </a>
    <div>
        <div class="post-meta"><span class="date">Culture</span> <span class="mx-1">&bullet;</span> <span>@Model.PubDateUtc</span></div>
        <h3><a class="text-decoration-none" asp-controller="BlogApp" asp-action="PostDetail" asp-route-url=@Model.Url>@Model.Title</a></h3>
       @* <p>@Model.PostContent</p>*@
        <div class="d-flex align-items-center author">
            <div class="photo"><img src="~/assets/img/person-2.jpg" alt="" class="img-fluid"></div>
            <div class="name">
                <h3 class="m-0 p-0">@Model.Author</h3>
            </div>
        </div>
    </div>
</div>